{
  "manifest_version": 2,
  "name": "Code Color Preview",
  "version": "2.1.0",
  "description": "Shows color previews next to hex and RGB codes in web pages",

  "permissions": ["storage", "activeTab", "<all_urls>"],

  "browser_specific_settings": {
    "gecko": {
      "id": "code-color-preview@lzhecz.github.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Code Color Preview Settings"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "48": "icon.png"
  }
}
